<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CoffeeTimeController">
    <top>
        <ToolBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="loadConfigButton" mnemonicParsing="false" onAction="#loadConfigButtonOnClicked"
                        text="选择配置"/>
                <Button fx:id="saveConfigButton" mnemonicParsing="false" onAction="#saveConfigButtonOnClicked"
                        text="保存配置"/>
                <Button mnemonicParsing="false" onAction="#actionStart" text="运行"/>
                <Button mnemonicParsing="false" onAction="#actionStop" text="关闭"/>
                <Button fx:id="guideButton" mnemonicParsing="false" onAction="#guideButtonOnClicked" text="说明"/>
            </items>
        </ToolBar>
    </top>
    <bottom>
        <TitledPane animated="false" prefHeight="113.0" prefWidth="600.0" text="输出结果" BorderPane.alignment="CENTER">
            <content>
                <ListView fx:id="logList" prefHeight="200.0" prefWidth="200.0"/>
            </content>
        </TitledPane>
    </bottom>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="configContent" prefHeight="223.0" prefWidth="598.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="property" prefWidth="150.0" text="属性"/>
                        <TableColumn fx:id="value" prefWidth="150.0" text="值"/>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
